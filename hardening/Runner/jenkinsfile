pipeline {
    agent any

    environment {
        NODE_IP = "192.168.68.61"
    }

    credentials {

    }
    stages {
        stage("Update OS") {
            steps {
                script {
                    sshagent(['']) {
                    sh 'ssh -o StrictHostKeyChecking=no root@${NODE_IP} "yum update -y"'
                }

            }
        }

        stage("Install packages") {
            steps {

                sh "echo 'Finished'"
                
            }
        }
    }
}